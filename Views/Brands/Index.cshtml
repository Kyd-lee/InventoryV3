@model IEnumerable<InventoryV3.Models.Brand>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

<p>
    @*@Html.ActionLink("Add Brand", "Create")*@
    <a href = "@Url.Action("Create","Brands")" class="btn btn-sm btn-primary fa fa-plus "> Add Brand</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BrandName)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID })*@
            <a href="@Url.Action("Edit","Brands",new {id = item.ID})" class="btn btn-sm btn-primary fa fa-edit"> Edit</a>&nbsp;
            <a href="@Url.Action("Details", "Brands", new { id = item.ID })" class="btn btn-sm btn-primary fa fa-info"> Details</a>&nbsp;
            <a href="@Url.Action("Delete", "Brands", new { id = item.ID })" class="btn btn-sm btn-danger fa fa-remove"> Delete</a>
        </td>
    </tr>
}

</table>
