@{
    ViewBag.Title = "Home";
}

<div id="myCarousal" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/img/bg1.png" alt="background" />
            <div class="container">
                <div class="carousel-caption">
                    <div class="row">
                        <div class="col-md-7">
                            <h2>Monitoring Assets across different branches</h2>
                            <ul class="feature-list">
                                <li><i class="fa fa-check"></i> Suva</li>
                                <li><i class="fa fa-check"></i> Lautoka</li>
                                <li><i class="fa fa-check"></i> Nadi</li>
                                <li><i class="fa fa-check"></i> Levuka</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/img/bg2.png" alt="background" />
            <div class="container">
                <div class="carousel-caption">
                    <div class="row">
                        <div class="col-md-7">
                            <h2>Keeping Track of Assets</h2>
                            <ul class="feature-list">
                                <li><i class="fa fa-check"></i> Mouse</li>
                                <li><i class="fa fa-check"></i> Keyboard</li>
                                <li><i class="fa fa-check"></i> Monitor</li>
                                <li><i class="fa fa-check"></i> System Unit</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/img/bg3.png" alt="background" />
            <div class="container">
                <div class="carousel-caption">
                    <div class="row">
                        <div class="col-md-7">
                            <h2>Ensure Employee Satisfaction</h2>
                            <ul class="feature-list">
                                <li><i class="fa fa-check"></i> Provide Employee Services</li>
                                <li><i class="fa fa-check"></i> Free Lunch</li>
                                <li><i class="fa fa-check"></i> Promotions</li>
                                <li><i class="fa fa-check"></i> Personal Developments</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousal" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousal" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>